{
	"rulesDirectory": ["tslint-plugin-prettier"],
	"rules": {
		"prettier": [
			true,
			{
				"singleQuote": true,
				"useTabs": true,
				"printWidth": 120
			}
		],
		"no-string-throw": true,
		"no-unused-expression": true,
		"no-duplicate-variable": true,
		"curly": true,
		"class-name": true,
		"semicolon": [
			true,
			"always"
		],
		"triple-equals": true,
		"no-empty": false
	},
	"defaultSeverity": "warning"
}
